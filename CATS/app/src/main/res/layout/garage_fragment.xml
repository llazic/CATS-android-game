<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/box0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cartoon_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/timeBox0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="20:00"
        app:layout_constraintStart_toStartOf="@id/box0"
        app:layout_constraintTop_toTopOf="@id/box0"
        app:layout_constraintEnd_toEndOf="@id/box0"
        app:layout_constraintBottom_toBottomOf="@id/box0"
        android:fontFamily="@font/two_fifty_six_bytes"/>

    <ImageView
        android:id="@+id/box1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cartoon_box"
        app:layout_constraintStart_toEndOf="@id/box0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/timeBox1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="20:00"
        app:layout_constraintStart_toStartOf="@id/box1"
        app:layout_constraintTop_toTopOf="@id/box1"
        app:layout_constraintEnd_toEndOf="@id/box1"
        app:layout_constraintBottom_toBottomOf="@id/box1"
        android:fontFamily="@font/two_fifty_six_bytes"/>

    <ImageView
        android:id="@+id/box2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cartoon_box"
        app:layout_constraintStart_toEndOf="@id/box1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/timeBox2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="20:00"
        app:layout_constraintStart_toStartOf="@id/box2"
        app:layout_constraintTop_toTopOf="@id/box2"
        app:layout_constraintEnd_toEndOf="@id/box2"
        app:layout_constraintBottom_toBottomOf="@id/box2"
        android:fontFamily="@font/two_fifty_six_bytes"/>

    <ImageView
        android:id="@+id/box3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cartoon_box"
        app:layout_constraintStart_toEndOf="@id/box2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/timeBox3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="20:00"
        app:layout_constraintStart_toStartOf="@id/box3"
        app:layout_constraintTop_toTopOf="@id/box3"
        app:layout_constraintEnd_toEndOf="@id/box3"
        app:layout_constraintBottom_toBottomOf="@id/box3"
        android:fontFamily="@font/two_fifty_six_bytes"/>

    <TextView
        android:id="@+id/text_view_box_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fontFamily="@font/two_fifty_six_bytes"
        android:text="BOX PROGRESS:"
        android:textColor="@color/letterColor"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/image_view_box_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/progress_box"
        app:layout_constraintBottom_toBottomOf="@id/text_view_box_progress"
        app:layout_constraintStart_toEndOf="@id/text_view_box_progress"
        app:layout_constraintTop_toTopOf="@+id/text_view_box_progress"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/check_mark_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/image_view_box_progress"
        app:layout_constraintBottom_toBottomOf="@id/image_view_box_progress"
        app:layout_constraintStart_toStartOf="@id/image_view_box_progress"
        app:layout_constraintEnd_toStartOf="@id/check_mark_1"
        android:src="@drawable/check_mark"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.06"/>

    <ImageView
        android:id="@+id/check_mark_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/image_view_box_progress"
        app:layout_constraintBottom_toBottomOf="@id/image_view_box_progress"
        app:layout_constraintStart_toStartOf="@id/image_view_box_progress"
        app:layout_constraintEnd_toEndOf="@id/image_view_box_progress"
        android:src="@drawable/check_mark"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.06"/>

    <ImageView
        android:id="@+id/check_mark_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/image_view_box_progress"
        app:layout_constraintBottom_toBottomOf="@id/image_view_box_progress"
        app:layout_constraintStart_toEndOf="@id/check_mark_1"
        app:layout_constraintEnd_toEndOf="@id/image_view_box_progress"
        android:src="@drawable/check_mark"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.06"/>

    <Button
        android:id="@+id/buttonFight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/two_fifty_six_bytes"
        android:padding="10dp"
        android:text="FIGHT"
        android:textColor="@color/letterColor"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <rs.etf.pmu.cats.customImageViews.GarageCustomImageView
        android:layout_width="500dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:src="@drawable/settings_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stats_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:src="@drawable/stats_icon"
        app:layout_constraintEnd_toStartOf="@id/settings_icon"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>